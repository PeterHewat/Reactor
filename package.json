{
  "name": "reactor-monorepo",
  "version": "0.1.0",
  "description": "Starter monorepo for React 19 + Convex + Clerk + Tailwind CSS + Vitest + Playwright",
  "private": true,
  "type": "module",
  "engines": {
    "node": ">=24.0.0"
  },
  "workspaces": [
    "apps/web",
    "convex",
    "packages/test-utils",
    "packages/ui",
    "packages/utils"
  ],
  "scripts": {
    "lint": "eslint .",
    "format": "prettier --check .",
    "format:fix": "prettier --write .",
    "typecheck": "tsc -p tsconfig.base.json --noEmit",
    "typecheck:refs": "tsc -b",
    "build": "tsc -b",
    "clean": "tsc -b --clean",
    "test": "npm run test --workspaces --if-present",
    "e2e:install": "npx -w apps/web playwright install",
    "install": "npm i --ignore-scripts",
    "clean-install": "npm ci --ignore-scripts",
    "outdated": "npm outdated",
    "update": "npm update --save --ignore-scripts"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.2",
    "@types/node": "^25.0.9",
    "@types/react": "^19.2.9",
    "@types/react-dom": "^19.2.3",
    "@typescript-eslint/eslint-plugin": "^8.53.1",
    "@typescript-eslint/parser": "^8.53.1",
    "eslint": "^9.39.2",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-prettier": "^5.5.5",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-hooks": "^7.0.1",
    "prettier": "^3.8.0",
    "prettier-plugin-tailwindcss": "^0.7.2",
    "react": "^19.2.3",
    "react-dom": "^19.2.3",
    "typescript": "~5.9.3",
    "vite": "^7.3.1",
    "vitest": "^4.0.17"
  }
}
