{
  "$schema": "https://json.schemastore.org/tsconfig",
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "bundler",
    "lib": ["ESNext", "DOM"],
    "types": ["node", "react", "astro"],
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "verbatimModuleSyntax": true,
    "jsx": "react-jsx",
    "allowJs": true,
    "noUncheckedIndexedAccess": true,
    "baseUrl": ".",
    "paths": {
      "@repo/utils": ["packages/utils/src/index.ts"],
      "@repo/ui-shared": ["packages/ui-shared/src/index.ts"],
      "@repo/ui-web": ["packages/ui-web/src/index.ts"],
      "@repo/ui-mobile": ["packages/ui-mobile/src/index.ts"],
      "@repo/ui-marketing": ["packages/ui-marketing/src/index.ts"],
      "@repo/test-utils": ["packages/test-utils/src/index.ts"]
    }
  }
}
